[diff]
	external = "difft --color auto --background light --display side-by-side"

[filter "lfs"]
	clean = "git-lfs clean -- %f"
	process = "git-lfs filter-process"
	required = true
	smudge = "git-lfs smudge -- %f"

[gpg]
	format = "ssh"

[gpg "ssh"]
	program = "ssh-keygen"

[init]
	defaultBranch = "main"

[pull]
	rebase = true

[push]
	autosetupremote = true

[rebase]
	autostash = true
